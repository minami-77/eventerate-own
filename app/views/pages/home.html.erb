<div class="position-relative h-100 w-100 overflow-hidden d-flex align-items-center justify-content-start custom-bg">
  <!-- Content Row -->
  <div class="container position-relative z-2 text-white px-4 px-md-5">
    <div class="row align-items-center">
      <!-- Left Column: Logo & Text -->
      <div class="col-lg-6 text-center text-lg-start">
        <!-- Logo -->
        <div class="mb-3">
          <%= image_tag 'Eventerate_2.png', alt: 'Eventerate Logo', class: 'logo-img img-fluid' %>
        </div>

        <!-- Heading -->
        <h1 class="fw-bold custom-h1">
          Effortless Event Planning for Any Occasion
        </h1>

        <!-- Subheading -->
        <p class="lead">
          <span id="typed-text"></span>
        </p>

        <!-- Buttons -->
        <div>
          <% if user_signed_in? %>
            <a href="<%= dashboard_index_path %>" class="btn btn-gradient btn-lg mt-3 px-4 py-2">Get Started</a>
          <% else %>
            <button type="button" class="btn btn-gradient btn-lg mt-3 px-4 py-2" data-bs-toggle="modal" data-bs-target="#eventModal">
              Login to Get Started
            </button>
          <% end %>
        </div>
      </div>

      <!-- Right Column: Additional Images -->
      <div class="col-lg-6 text-center mt-4 mt-lg-0">
        <div class="image-stack">
          <div class="image-wrapper">
            <%= image_tag 'event1.jpg', alt: 'Event Planning', class: 'extra-img img-fluid' %>
          </div>
          <div class="image-wrapper">
            <%= image_tag 'calendar.png', alt: 'Collaboration', class: 'extra-img img-fluid' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Typed.js -->
<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
<script>
  document.addEventListener('turbo:load', function() {
    if (document.querySelector("#typed-text")) {
      new Typed("#typed-text", {
        strings: [
          "Plan corporate, school, or private events in just a few clicks.",
          "Eventerate simplifies your planning process.",
          "Start organizing events with ease today!"
        ],
        typeSpeed: 50,
        backSpeed: 20,
        loop: true,
        showCursor: true,
        cursorChar: "ðŸª„"
      });
    }
  });
</script>
