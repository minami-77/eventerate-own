<%= simple_form_for @activity_event, url: @activity_event.new_record? ? create_activity_path(@event) : update_activity_path(@event, @activity_event), method: @activity_event.new_record? ? :post : :patch do |f| %>
  <div class="mb-4">
    <%= f.input :custom_title, label: "Activity Name", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-4">
    <%= f.input :custom_description, label: "Activity Description", input_html: { class: "form-control" } %>
  </div>

  <div class="">
    <%= f.button :submit, @activity_event.new_record? ? "Add Activity" : "Update Activity", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
