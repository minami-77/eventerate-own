<div class="w-100 d-flex flex-column align-items-center justify-content-center mt-4">
  <h1>Create a new organization</h1>
  <%= simple_form_for @organization, html: { class: "w-50 d-flex flex-column" } do |f| %>
    <%= f.input :name, class: "form-control" %>
    <div class="d-flex justify-content-center">
      <%= f.submit "Create!", class: "btn btn-success w-25" %>
    </div>

  <% end %>
</div>
